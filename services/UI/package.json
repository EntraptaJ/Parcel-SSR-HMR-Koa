{
  "name": "ts-parcelssr-ui",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "ts-node --project tsconfig.server.json bin/build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "ts-node --project tsconfig.server.json bin/watch"
  },
  "author": "Kristian Jones <me@kristianjones.xyz>",
  "license": "ISC",
  "alias": {
    "ui": "./ui"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@rmwc/button": "^5.5.2",
    "@rmwc/circular-progress": "^5.5.2",
    "@rmwc/drawer": "^5.5.2",
    "@rmwc/icon": "^5.5.2",
    "@rmwc/list": "^5.5.2",
    "@rmwc/textfield": "^5.5.2",
    "@rmwc/top-app-bar": "^5.5.2",
    "@rmwc/typography": "^5.5.2",
    "fs-extra": "^8.1.0",
    "hash-it": "^4.0.4",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hook-form": "^3.18.5",
    "react-icons": "^3.7.0",
    "react-loadable": "^5.5.0",
    "ui": "^0.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@types/fs-extra": "^8.0.0",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^12.0.12",
    "@types/parcel-bundler": "^1.12.0",
    "@types/reach__router": "^1.2.4",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-loadable": "^5.5.1",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "chokidar": "^3.0.2",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-standard": "^4.0.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-assets-list": "^1.7.1",
    "parcel-plugin-bundle-manifest": "^0.2.0",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "tsconfigRootDir": "."
    },
    "env": {
      "browser": true
    },
    "plugins": [
      "@typescript-eslint",
      "react-hooks",
      "prettier"
    ],
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/standard",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": true,
          "jsxSingleQuote": true,
          "printWidth": 128,
          "trailingComma": "all"
        }
      ]
    }
  }
}
